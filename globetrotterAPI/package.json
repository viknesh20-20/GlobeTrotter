{
  "name": "globetrotter-api",
  "version": "1.0.0",
  "description": "GlobeTrotter Travel Planning API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "tsx src/infrastructure/database/migrate.ts",
